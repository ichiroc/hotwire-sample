%h1 New Message

= turbo_frame_tag 'new_message', target: '_top' do
  = form_with(model: [@message.room, @message], data: { controller: 'reset_form', action: 'turbo:submit-end->reset_form#reset' }) do |f|
    .field
      = f.text_field :content
      = f.submit 'Send'

= link_to 'Back', @message.room
